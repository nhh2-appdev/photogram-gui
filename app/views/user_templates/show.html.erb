<!DOCTYPE html>
<html>
  <head>

  </head>

  <body>

    <nav>
      <ul>
        <li>
          <a href="/users">Users</a>
        </li>
        <li>
          <a href="/photos">Photos</a>
        </li>
      </ul>
    </nav>

    <h1> <%= @the_user.username %> </h1>
     
    <dt> 
      ID
    </dt>
      <dd> 
        <%= @an_id %>
      </dd>
    <dt> 
      Edit user
    </dt>
      <dd> 
        <form action="/insert_user_record">
          <label for = "browser_username">Username</label>
          <input id = "browser_username" type="text" name="input_username" placeholder ="Enter a username...">
          <button>Update user</button>
        </form>
      </dd>

    <h2> Own photos (<%= @the_user.own_photos.count %>)</h2> 

    <table border="1">
      <th>
        Image
      </th>
      <th>
        Owner
      </th>
      <th>
        Caption
      </th>
      <th>
        Posted
      </th>
      <th>
      </th>

      <% @the_user.own_photos.each do | a_photo | %>
        <tr>
          <td> 
            <img src = <%= a_photo.image %>>
          </td>
          <td> 
            <%= a_photo.owner_id %> 
          </td>
          <td> 
            <%= a_photo.caption %> 
          </td>
          <td> 
            <%= a_photo.created_at %> 
          </td>
          <td>
            <a href="/users/<%#= a_user.id %>">
              Show details
            </a>
          </td>
        </tr>
      <% end %>
    </table>
