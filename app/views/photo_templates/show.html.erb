<!DOCTYPE html>
<html>
  <head>

  </head>

  <body>

    <nav>
      <ul>
        <li>
          <a href="/users">Users</a>
        </li>
        <li>
          <a href="/photos">Photos</a>
        </li>
      </ul>
    </nav>

  <h1>Photo Details</h1>

    <dt> 
      Image
    </dt>
      <dd> 
        <img src = <%= @the_photo.image %>>
      </dd>
    <dt> 
      Caption
    </dt>
      <dd>
        <%= @the_photo.caption %>
      </dd>
    <dt> 
      Owner
    </dt>
      <dd>
        <%= @the_photo.poster.username %>
      </dd>
    <dt> 
      Posted
    </dt>
      <dd>
        <%= @the_photo.created_at %>
      </dd>
    <dt> 
      Edit Photo
    </dt>
      <dd>
        <%#= @the_photo.caption %>
      </dd>
    <dt> 
      Delete Photo
    </dt>
      <dd>
        <%#= @the_photo.caption %>
      </dd>

  <h2>Comments</h2>

  <table>
    <tr>
      <th>Commenter</th>
      <th>Comment</th>
      <th>Posted</th>
    </tr>

    <% @the_photo.comments.each do | a_comment |%>
      <tr>
        <td>
          <%= a_comment.commenter.username %>
        </td>
        <td>
          <%= a_comment.body %>
        </td>
        <td>
          <%= a_comment.created_at %>
        </td>
      </tr>
    <% end %>

    </table>

    <h2>Add a new comment</h2>

    <form action="/insert_comment_record">
      <label for="browser_photo_id">Photo ID</label>
      <input id="browser_photo_id" type="text" value="777" name="input_photo_id">

      <label for="browser_author_id">Author ID</label>
      <input id="browser_author_id" type="text" name="input_author_id">

      <label for="browser_comment">Comment</label>
      <textarea id="browser_comment" name="input_body" placeholder="Enter a comment..."></textarea>

      <button>Add comment</button>
    </form>

  </body>
</html>
